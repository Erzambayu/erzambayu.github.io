---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url | default: 'https://erzambayu.github.io' }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    <xhtml:link rel="alternate" hreflang="id" href="{{ site.url | default: 'https://erzambayu.github.io' }}/"/>
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url | default: 'https://erzambayu.github.io' }}/en/"/>
  </url>

  <!-- Static Pages -->
  {% for page in site.pages %}
    {% unless page.noindex == true or page.sitemap == false %}
      {% if page.url != "/404.html" and page.url != "/offline.html" %}
        <url>
          <loc>{{ site.url | default: 'https://erzambayu.github.io' }}{{ page.url }}</loc>
          {% if page.date %}
            <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
          {% else %}
            <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
          {% endif %}
          {% if page.url == "/" %}
            <changefreq>weekly</changefreq>
            <priority>1.0</priority>
          {% elsif page.url == "/about/" or page.url == "/projects/" or page.url == "/blog/" %}
            <changefreq>weekly</changefreq>
            <priority>0.8</priority>
          {% else %}
            <changefreq>monthly</changefreq>
            <priority>0.6</priority>
          {% endif %}
          <xhtml:link rel="alternate" hreflang="id" href="{{ site.url | default: 'https://erzambayu.github.io' }}{{ page.url }}"/>
          <xhtml:link rel="alternate" hreflang="en" href="{{ site.url | default: 'https://erzambayu.github.io' }}/en{{ page.url }}"/>
        </url>
      {% endif %}
    {% endunless %}
  {% endfor %}

  <!-- Blog Posts -->
  {% for post in site.posts %}
    {% unless post.noindex == true or post.sitemap == false %}
      <url>
        <loc>{{ site.url | default: 'https://erzambayu.github.io' }}{{ post.url }}</loc>
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
        <xhtml:link rel="alternate" hreflang="id" href="{{ site.url | default: 'https://erzambayu.github.io' }}{{ post.url }}"/>
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url | default: 'https://erzambayu.github.io' }}/en{{ post.url }}"/>
      </url>
    {% endunless %}
  {% endfor %}

  <!-- Project Pages -->
  {% for project in site.projects %}
    {% unless project.noindex == true or project.sitemap == false %}
      <url>
        <loc>{{ site.url | default: 'https://erzambayu.github.io' }}{{ project.url }}</loc>
        {% if project.date %}
          <lastmod>{{ project.date | date_to_xmlschema }}</lastmod>
        {% else %}
          <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>monthly</changefreq>
        <priority>0.6</priority>
        <xhtml:link rel="alternate" hreflang="id" href="{{ site.url | default: 'https://erzambayu.github.io' }}{{ project.url }}"/>
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url | default: 'https://erzambayu.github.io' }}/en{{ project.url }}"/>
      </url>
    {% endunless %}
  {% endfor %}

  <!-- Category and Tag Pages -->
  {% for category in site.categories %}
    <url>
      <loc>{{ site.url | default: 'https://erzambayu.github.io' }}/category/{{ category[0] | slugify }}/</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
    </url>
  {% endfor %}

  {% for tag in site.tags %}
    <url>
      <loc>{{ site.url | default: 'https://erzambayu.github.io' }}/tag/{{ tag[0] | slugify }}/</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.4</priority>
    </url>
  {% endfor %}
</urlset>